<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="我的" />

    <Button
        android:id="@+id/okhttp_test_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="OkHttp3初步测试" />

    <Button
        android:id="@+id/okhttp_post_json_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Post请求-提交JSON数据" />

    <Button
        android:id="@+id/okhttp_post_keyvalue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Post请求-提交键值对（表单）数据" />

    <Button
        android:id="@+id/okhttp_post_file_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Post请求-上传文件" />

    <Button
        android:id="@+id/okhttp_post_header_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="发送请求头—获取响应头" />

    <Button
        android:id="@+id/okhttp_post_string_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="Post方式提交String" />
</LinearLayout>