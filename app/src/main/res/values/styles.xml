<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- POP动画   右侧进右侧出-->
    <style name="AnimationRightFade">
        <item name="android:windowEnterAnimation">@anim/pop_in_right</item>
        <item name="android:windowExitAnimation">@anim/pop_out_right</item>
    </style>
    <!-- Application theme. -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Light"></style>-->
    <style name="AppThemeNoBar" parent="Theme.AppCompat.NoActionBar">
        <!-- 修改分割线样式-->
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>


</resources>
